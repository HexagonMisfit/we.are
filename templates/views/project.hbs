<div id="work-container">
	<div id="project-container">
		<h1 class="really-big-text hot-pink">{{data.project.title}}</h1>
		{{#if data.project.video}}
		<video class="project-video" src="{{data.project.video.url}}{{data.project.video.file.filename}}"></video>
		{{/if}}
		{{#if data.project.blurb}}
		<p class="project-p light-text">{{data.project.blurb}}</p>
		{{/if}}
		<img class="project-img" src="{{data.project.img1.url}}{{data.project.img1.file.filename}}"/>
		{{#if data.project.p1}}
		<p class="project-p light-text">{{data.project.p1}}</p>
		{{/if}}
		{{#if data.project.img2}}
		<img class="project-img" src="{{data.project.img2.url}}{{data.project.img2.file.filename}}"/>
		{{/if}}
		{{#if data.project.p2}}
		<p class="project-p light-text">{{data.project.p2}}</p>
		{{/if}}
		{{#if data.project.img3}}
		<img class="project-img" src="{{data.project.img3.url}}{{data.project.img3.file.filename}}"/>
		{{/if}}
		{{#if data.project.p3}}
		<p class="project-p light-text">{{data.project.p3}}</p>
		{{/if}}
	</div>
</div>